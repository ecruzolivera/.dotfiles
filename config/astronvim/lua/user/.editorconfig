root = true
# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.vim]
indent_style = space
indent_size = 4

[*.lua]
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
max_line_length = 80
trim_trailing_whitespace = false

