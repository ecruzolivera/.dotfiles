source ~/.vimrc


" Enable ideavim plugins: https://github.com/JetBrains/ideavim/wiki/IdeaVim-Plugins
set NERDTree
set highlightedyank
set matchit
set quickscope
set ideajoin
set commentary

" Navigation
:map <leader>ff <Action>(GotoFile)
:map <leader>fw <Action>(TextSearchAction)
:map <leader>g <Action>(FindInPath)
:map gr <Action>(GotoDeclaration)
:map <leader>e :NERDTreeToggle<CR>
:map <C-p> <Action>(GotoFile)
:map <C-S-p> <Action>(SearchEverywhere)
:map za <Action>(ExpandCollapseToggleAction)
:map <leader>bv <Action>(SplitVertically)
:map <leader>bh <Action>(SplitHorizontally)



" LSP
:map <Leader>lf <Action>(ReformatCode)
:map <Leader>lr <Action>(RenameElement)
:map <Leader>la <Action>(ShowIntentionActions)
:map ]d <Action>(GotoNextError)


" Debugging
:map <Leader>df <Action>(Run)
:map <Leader>dc <Action>(Debug)
:map <Leader>db <Action>(ToggleLineBreakpoint)
